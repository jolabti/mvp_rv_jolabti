<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        app:cardElevation="10px"
        app:cardCornerRadius="10px"
        >

        <LinearLayout


            android:id="@+id/rowID"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="5dp"



            >

            <!--  android:background="#f2efcd"-->
            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/imageID"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:src="@mipmap/ic_launcher"
                android:drawingCacheQuality="auto"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"

                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="top|center"
                android:foregroundGravity="center_horizontal"

                android:layout_margin="10dp"
                >

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/titleID"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500ss"
                    android:gravity="center_vertical"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/timeID"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:text="20 Januari 2019"
                    android:gravity="center_vertical"
                    android:textColor="#C2BEBE"
                    android:textStyle="bold"
                    />


            </LinearLayout>



        </LinearLayout>

    </android.support.v7.widget.CardView>


</RelativeLayout>